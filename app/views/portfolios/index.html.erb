<div class="portfolio">
  <div class="portfolio-body">
    <h2 class="projects-heading">Projects</h2>
    <div class="projects">
      <div class="projects-body container">
        <div class="col">
          <div class="row row-flex">
            <% @projects.each do |project| %>
            <div class="card" style="width: 18rem;">
              <% if project.image.attached? %>
                <%= image_tag project.image, class: 'card-img-top'%>
              <%end%>
              <div class="card-body">
                <h5 class="card-title"><%= project.name %></h5>
                <p class="card-text"><%= project.description %></p>
                <p><%= link_to "Repository Link", project.repo_link %></p>
                <p><%= link_to "Deployed Project", project.deployment_link %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <h2 class="about-heading">About Me</h2>
    <div class="about container">
      <h3 class="skills-header">Skills</h3>
      <div class="skills">
        <% @skills.each do |skill| %>
          <div class="card" style="width: 10rem;">
            <% if skill.image.attached? %>
              <%= image_tag skill.image, class:'skill-icon'%>
            <%end%>
            <p><%= skill.name %></p>
          </div>
        <% end %>
      </div>
      <div class="hobbies">
        <h3>Hobbies</h3>
        <div class="col">
          <div class="row row-flex">
            <% @hobbies.each do |hobby| %>
            <div class="card" style="width: 18rem;">
              <% if hobby.image.attached? %>
                <%= image_tag hobby.image, class: 'card-img-top'%>
              <%end%>
              <div class="card-body">
                <h5 class="card-title"><%= hobby.name %></h5>
                <p class="card-text"><%= hobby.description %></p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="contact">
      <h2>Contact</h2>
      <div class="contact-info">
        <p>Nate Cottle</p>
        <p>cottle.nate@gmail.com</p>
      </div>
    </div>
  </div>
</div>
